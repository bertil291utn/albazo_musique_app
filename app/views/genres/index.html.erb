<div>
  <h3>Genres</h3>
  <%= form_with url: genero_artistas_path do |f| %>
    <% @genres.each do |genre| %>
      <div class="genre-element">
        <p><%= genre.name %></p>
        <%= image_tag genre.bg_url, size:'75' %>
      </div>
      <%= f.check_box :generos, {multiple: true}, genre.id, nil  %>
    <% end %><br>
    <%= f.submit "Seleccionar" %>
  <%end%>
</div>
<%
=begin  %>
<p id="notice"><%= notice %></p>
<h1>Genres</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Bg url</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= genre.bg_url %></td>
        <td><%= link_to 'Show', genre %></td>
        <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
        <td><%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Genre', new_genre_path %>
<%
=end%>
